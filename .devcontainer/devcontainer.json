{
    "name": "Devcontainer for the ABCT toolkit",
    "dockerFile": "Dockerfile",
    "remoteUser": "vscode",
    "workspaceMount": "source=${localWorkspaceFolder},target=/home/vscode/toolkit,type=bind",
    "workspaceFolder": "/home/vscode/toolkit",
    "postAttachCommand": "poetry shell",
    "extensions": [
        "ms-python.python"
    ]
}